
@import '../lib/nib'

retina="(-o-min-device-pixel-ratio: 5/4),(-webkit-min-device-pixel-ratio: 1.25),(min-resolution: 120dpi)"
brand=#0c3f8c

grid(columns, w=1, m=2)
	display:inline-block
	vertical-align:top
	margin:m+0% 0 0 m+0%
	width:((100%/columns)*w)-((m*(columns+w))/columns)

padding=1.5em

*::selection
	background:  rgba(brand,0.3)

*
	box-sizing:     border-box
	text-rendering: optimizeLegibility
	position:       relative

h1,h2,h3,h4,h5,h6
	margin-top:0
p,ul,h1,h2,h3,h4,h5,h6
	margin:0

a
	color:brand

h1
	font-size: 4.25em
h2
	font-size: 2.1em
	margin-bottom:((1/2.1)*1.5)em
h3
	font-size: 1.62em
ul
	padding-left:1em
img
	max-width: 100%
	border: none
.img
	width:100%
	overflow:hidden
	img
		height:100%
		min-width:100%
		max-width:none
		width:auto
img,.img,#map
	box-shadow:0 0 5px rgba(#000,0.2)
html
	overflow-y: scroll
	font-family:Ubuntu, sans-serif
	color:rgba(0,0,0,0.8)
	line-height:1.5em
	font-size:16px
	@media screen and (min-width: 960px)
		font-size:18px
	@media screen and (min-width: 1300px)
		font-size:20px
	@media screen and (min-width: 1400px)
		font-size:22px
body
	margin:0

html,body
	min-height: 100%

section
	background:#fff
	padding:padding

section:nth-of-type(2n)
	background:#eee

.leftcol,.rightcol
	width:50%
	display:inline-block
	vertical-align:middle
.leftcol
	padding-right:(padding/2)
.rightcol
	padding-left:(padding/2)
@media screen and (max-width: 600px)
	.leftcol,.rightcol
		padding:0
		width:100%
	.leftcol
		padding-bottom:padding

header
	width:100%
	font-size:0
	top:0
	left:0
	background-size:100%
	line-height:0
	-webkit-transform:translateZ(1px)
	z-index:-5
	pointer-events:none
	margin:0 //ie8 fix
	&:after
		content:""
		display:block
		padding-top:12%
		padding-top:14%
h1
	position:absolute
	top:0
	right:0
	margin:0
	height:0
	line-height:0
	font-size:0
	padding-top:14%
	width:50%
	background: url("http://farm9.staticflickr.com/8232/8470096105_7a4d65ac2f_o.png") center no-repeat
	background-size:40%
	-webkit-transform:translateZ(1px)
	@media retina
		background: url("http://farm9.staticflickr.com/8101/8471190546_bec8bfe578_o.png") center no-repeat
		background-size:40%

canvas
	position:absolute
	top:0
	left:0
	width:100%
	height:100%
	z-index:-1

nav
	text-align:center
	padding:0.62em
	background: brand //linear-gradient(lighten(#0c3f8c,10%),#0c3f8c)
	border-top:solid 1px lighten(@background,10%)
	border-bottom:solid 1px darken(@background,10%)
	left:0
	width:100%
	position:absolute
	z-index:100 //mobile webkit bug
	-webkit-transform:translateZ(1px) //mobile webkit bug
	line-height:1em
	font-size:1.62em
	margin:0 //ie8 fix
	@media screen and (max-width: 780px)
		font-size:4vw
	a
		margin:0 4%
		color:#fff
		text-decoration:none
.fixed
	position:fixed
	top:0
.absolute
	position:absolute
#contact
	padding-top:5.2em
#contact .rightcol
	text-align:center
#map
	width:100%
	padding-top:14em
	overflow:hidden
	background:#fff url("http://farm9.staticflickr.com/8521/8466183038_2a95d88eb0_h.jpg") center
	background-size:cover
	@media screen and (max-width: 400px)
		padding-top:200px

iframe
	border:none
	width:100%
	height:100%
	top:0
	left:0
	position:absolute
	opacity:0.01
	transition:opacity .4s
	transform:translateZ(1px)
	&:hover
		opacity:0.95
.ie8 iframe
	opacity:1


address
	display:inline-block
	width:auto
	text-align:left
	font-style:normal

.ratio-wrap
	display:inline-block

.ratio-wrap:before
	content:""
	display:block

.ratio-inner
	position:absolute
	top:0
	left:0
	width:100%
	height:100%

